@model List<Product>
@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    
    <div class="card">
        
        <div class="card-body">
            
            <h4 class="card-title">products</h4>
           <div class=" "><a asp-controller="product" asp-action="create" class="btn btn-success">Create product</a></div>
            <div class="table-responsive">
               
                <span class="text-danger">@TempData["PhotoError"]</span>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                               Price
                            </th>
                            <th>
                               Category
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Product item in Model)
                        {
                            count++;
                            <tr>

                                <td>
                                   @count
                                </td>
                                <td>
                                  <img src="~/assets/images/website-images/@item.ProductImages.FirstOrDefault()?.ImageUrl" />
                                </td>
                                <td>
                                   @item.Name
                                </td>
                                <td>
                                    @item.Price
                                </td>
                                <td>
                                    @item.Category.Name
                                </td>
                                <td>
                                    @foreach(ProductTag pTag in item.ProductTags)
                                    {
                                       <p>@pTag.Tag.Name </p> 
                                    }
                                </td>
                                  
                                <td>
                                    <a asp-action="update" asp-controller="product" asp-route-id="@item.Id" class="btn btn-warning "><i class="mdi mdi-pencil-box"></i></a>

                                    <a asp-action="delete" asp-controller="product" asp-route-id="@item.Id" class="btn btn-danger "><i class="mdi mdi-delete"></i></a>

                                    <a class="btn btn-primary "><i class="mdi mdi-open-in-new"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>